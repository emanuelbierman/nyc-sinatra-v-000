<h2>Create New Figure</h2>
<br></br>
  <form method="post" action="/figures">
    <input type="text" name="figure[name]" id="figure_name">
    <br></br>
    <% Title.all.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><%= title.name %></input>
    <% end %>
    <br></br>
    <% Landmark.all.each do |title| %>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%= title.id %>"><%= title.name %></input>
    <% end %>
    <br></br>
    <input type="submit" value="Create New Figure">
  </form>
<br></br>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
